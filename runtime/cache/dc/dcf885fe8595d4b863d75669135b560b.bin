a:2:{i:0;a:3:{i:0;O:8:"stdClass":29:{s:2:"id";s:4:"2390";s:7:"user_id";s:2:"17";s:14:"user_full_name";s:0:"";s:5:"title";s:61:"Liệu tảo biển có thể chữa khỏi bệnh mù mắt?";s:11:"category_id";s:2:"67";s:8:"event_id";s:1:"0";s:5:"money";s:1:"0";s:8:"subtitle";s:0:"";s:4:"slug";s:42:"lieu-tao-bien-co-the-chua-khoi-benh-mu-mat";s:4:"logo";s:32:"files/news/2015/09/15/Algae2.jpg";s:5:"cover";s:0:"";s:11:"description";s:131:"Mỹ: Một loại tảo được cấy vào võng mạc có khả năng khôi phục lại thị giác cho người khiếm thị.";s:7:"content";s:5077:"<table class="image center" width="400" cellspacing="0" cellpadding="0" align="center">
